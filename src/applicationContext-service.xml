<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- 泛型不能为单粒 -->
	<bean id="BaseService" class="com.xixi.service.impl.BaseServiceImpl" lazy-init="true">
		<property name="sessionFactory" ref="sessionFactory"></property>
	</bean>
	<bean id="CategoryService" class="com.xixi.service.impl.CategoryServiceImpl" parent="BaseService"/> 
	<bean id="AccountService" class="com.xixi.service.impl.AccountServiceImpl" parent="BaseService"/>
</beans>